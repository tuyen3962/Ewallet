<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitOrderActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F1EFEF">

        <include
            layout="@layout/custom_action_bar"
            android:id="@+id/toolbarLayout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Chi tiết giao dịch"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginVertical="5dp"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/White">

                    <LinearLayout
                        android:id="@+id/exchangeMoneyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chuyển đến"
                            android:textSize="18sp"
                            android:padding="5dp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@color/Grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Tên ví"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Tên ví"
                                android:textSize="18sp"
                                android:padding="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Số điện thoại"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Số điện thoại"
                                android:textSize="18sp"
                                android:padding="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/withdrawLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Rút về NH liên kết"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvWithdrawBankName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Tên NH liên kết"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/topupLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Nạp tiền từ"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvTopupBankFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Tên NH"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Số thẻ"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvCardno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Số thẻ"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mobileCardLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Thẻ cào"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvMobileCardOperator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Thẻ cào"
                                android:textSize="18sp"
                                android:padding="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Số lượng"
                                android:textSize="18sp"
                                android:layout_marginRight="5dp"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Số lượng"
                                android:textSize="18sp"
                                android:padding="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Số tiền"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Số tiền"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@color/Grey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Phí giao dịch"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvFeeTransaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Miễn phí"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@color/Grey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Tổng tiền"
                            android:textSize="18sp"
                            android:layout_marginRight="5dp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Tổng cộng"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:gravity="center">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xác nhận"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/SoftRed"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingHorizontal="40dp"
                            android:onClick="SubmitOrderTransaction"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/verifyPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SoftWhite"
        android:gravity="bottom"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/SoftBlue">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:drawableStart="@drawable/ic_action_cancel"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nhập mã pin"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:onClick="RefuseVerifyPin"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/Grey"
                android:layout_marginVertical="10dp"/>

            <FrameLayout
                android:id="@+id/passwordLayout"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Quên mật khẩu"
                android:layout_marginTop="30dp"
                android:textColor="@color/Red"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:background="@color/SoftRed"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:text="Xác thực"
                android:onClick="VerifyPin"/>

            <com.davidmiguel.numberkeyboard.NumberKeyboard
                android:id="@+id/keyboard"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:keyboard="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentBottom="true"
                android:background="@color/White"
                keyboard:numberkeyboard_numberKeyTextColor="@color/colorAccent"
                keyboard:numberkeyboard_keyWidth="45dp"
                keyboard:numberkeyboard_keyHeight="45dp"
                keyboard:numberkeyboard_keyboardType="custom"
                keyboard:numberkeyboard_leftAuxBtnIcon="@drawable/ic_action_point_light"
                keyboard:numberkeyboard_leftAuxBtnBackground="@drawable/ic_action_point_dark"
                keyboard:numberkeyboard_rightAuxBtnIcon="@drawable/ic_action_arrow_right"
                keyboard:numberkeyboard_rightAuxBtnBackground="@drawable/ic_action_point_dark"
                android:layout_below="@id/btnForgetPass"
                android:visibility="visible"/>

        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/progress_bar"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>