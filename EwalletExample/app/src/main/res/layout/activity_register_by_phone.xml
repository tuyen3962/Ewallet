<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterByPhone">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="VDT"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvRegisterByPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:text="Đăng kí bằng điện thoại"/>

    <TextView
        android:id="@+id/tvWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="VDT"
        android:textColor="@color/Red"
        android:layout_below="@+id/tvRegisterByPhone"
        android:textSize="28sp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRegisterByPhone"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="Họ và tên"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRegisterByPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:hint="Nhập họ và tên"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etFullName"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Chứng minh \n nhân dân"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/etCMND"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etFullName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập chứng minh \n nhân dân"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCMND"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Số điện thoại"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/etUserPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCMND"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập số điện thoại"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUserPhone"
        android:text="Mật khẩu"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUserPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập mật khẩu"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:text="Xác nhận mật khẩu"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập lại mật khẩu"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmPassword"
        android:text="Email"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập email"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_round_button"
        android:gravity="center"
        android:onClick="RegisterEvent"
        android:text="Đăng kí" />

</RelativeLayout>